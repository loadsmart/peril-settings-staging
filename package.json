{
  "name": "peril-settings",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/loadsmart/peril-settings",
  "author": "Gustavo Barbosa <gustavo@loadsmart.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "danger": "^3.1.3",
    "danger-plugin-spellcheck": "^1.2.2",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "lint-staged": {
    "*.@(ts|tsx)": ["yarn prettier --write", "git add"],
    "*.json": ["yarn prettier --write", "git add"]
  },
  "dependencies": {
    "github-webhook-event-types": "^1.1.0"
  }
}
