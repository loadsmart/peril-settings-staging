{
  "name": "peril-settings",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/loadsmart/peril-settings",
  "author": "Gustavo Barbosa <gustavo@loadsmart.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "type-check": "tsc  --noEmit"
  },
  "devDependencies": {
    "@roadiehq/roadie-backstage-entity-validator": "^2.3.0",
    "@slack/client": "^4.2.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.0.25",
    "danger": "^7.0.10",
    "danger-plugin-spellcheck": "^1.2.3",
    "danger-plugin-yarn": "^1.3.1",
    "github-webhook-event-types": "^1.2.1",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "jsome": "^2.5.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.16.4",
    "ts-jest": "^21.0.0",
    "typescript": "^3.3.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn prettier --write",
      "jest",
      "git add"
    ],
    "*.json": [
      "yarn prettier --write",
      "git add"
    ],
    "*.md": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
